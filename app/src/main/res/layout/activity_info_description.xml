<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30sp"
           android:paddingBottom="30sp"
           android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_margin="20dp"
           android:focusable="true"
           android:focusableInTouchMode="true">
        <TextView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/buttons"/>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_screen_info"/>
        </LinearLayout>
        <TextView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textColor="@color/buttons"/>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_screen_info"/>
        </LinearLayout>
        <TextView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="@color/buttons"/>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:background="@drawable/layout_screen_info"/>

            <ImageButton
                android:id="@+id/copyPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:onClick="copyPassword"
                app:srcCompat="?attr/actionModeCopyDrawable" />
            <ImageButton
                android:id="@+id/showPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:onClick="setVisible"
                app:srcCompat="@android:drawable/ic_menu_view" />

        </LinearLayout>
           <Button
               android:id="@+id/generatePassword"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:backgroundTint="@color/buttons"
               android:onClick="generatePassword"
               android:text="GENERAR"
               android:textColor="@color/background" />
        <TextView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="URL"
            android:textColor="@color/buttons" />
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_screen_info" />
        </LinearLayout>
        <TextView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textColor="@color/buttons" />
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_screen_info" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttons"
            android:onClick="saveInfo"
            android:text="GUARDAR y SALIR"
            android:textColor="@color/background" />

    </LinearLayout>


</ScrollView>